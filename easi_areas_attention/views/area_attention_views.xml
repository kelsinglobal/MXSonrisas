<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

       <record id="view_medical_areas_attention_tree" model="ir.ui.view">
            <field name="name">medical.areas.attention.tree</field>
            <field name="model">medical.areas.attention</field>
            <field name="arch" type="xml">
                <tree string="Areas attention">
                    <field name="medical_center_id"/>
                    <field name="name"/>
                    <field name="allows_reservation"/>
                    <field name="operating_rooms"/>
                    <field name="state"/>
                </tree>
            </field>
       </record>

      <record id="view_medical_areas_attention_form" model="ir.ui.view">
            <field name="name">medical.areas.attention.form</field>
            <field name="model">medical.areas.attention</field>
            <field name="arch" type="xml">
                <form string="Area attention">
                    <sheet>
                       <div class="oe_title">
                            <label for="name" placeholder="Name"/>
                            <h1><field name="name" placeholder="Name..."/></h1>
                       </div>
                        <group>
                            <group>
                                 <field name="medical_center_id"/>
                                 <field name="allows_reservation"/>
                                 <field name="state"/>
                            </group>
                             <group>
                                 <field name="operating_rooms"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
      </record>

      <record id="action_area_attention" model="ir.actions.act_window">
            <field name="name">Area attention</field>
            <field name="res_model">medical.areas.attention</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new area attention
              </p>
            </field>
      </record>

  </data>
</odoo>