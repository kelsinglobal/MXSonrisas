<!--    Medical Personnel-->
    <record id="view_medical_personnel_form" model="ir.ui.view">
        <field name="name">medical.personnel.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="name_copy"/>
                <span attrs="{'invisible': [('name', '!=', False)]}">Empleado</span>
            </field>
            <field name="name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//sheet/group/group[1]/field[@name='mobile_phone']" position="before">
                <field name="father_lastname" required="True"/>
                <field name="mother_lastname"/>
                <field name="employee_name" required="True"/>
                <field name="group_rh"/>
                <field name="profession"/>
            </xpath>
            <xpath expr="//sheet/group/group[1]/field[@name='work_email']" position="after">
                <field name="professional_dni"/>
                <field name="medical_institution"/>
            </xpath>
            <xpath expr="//sheet/group/group[2]/field[@name='department_id']" position="before">
                <field name="employee_category" required="True"/>
            </xpath>
            <xpath expr="//sheet/notebook/page[@name='hr_settings']" position="after">
                <page name="specialties" string="Specialties">
                    <field name="hr_employee_line_ids">
                        <tree string="Specialties" editable="bottom">
                            <field name="medical_specialty"/>
                            <field name="medical_faculty"/>
                            <field name="dni"/>
                            <field name="validity"/>
                            <field name="employee_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="action_medical_personnel" model="ir.actions.act_window">
        <field name="name">Medical Personnel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_is_medical_personnel': 1}</field>
        <field name="domain">[('is_medical_personnel', '=', 1)]</field>
    </record>
</odoo>
