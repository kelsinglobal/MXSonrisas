<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--medical specialties-->
    <record id="view_medical_specialty_form" model="ir.ui.view">
            <field name="name">medical.specialty.form</field>
            <field name="model">medical.specialty</field>
            <field name="arch" type="xml">
                <form string="Medical Specialty">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="key"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_medical_specialty_tree" model="ir.ui.view">
            <field name="name">medical.specialty.tree</field>
            <field name="model">medical.specialty</field>
            <field name="arch" type="xml">
                <tree string="Medical Specialties">
                    <field name="key"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

    <record id="action_specialties" model="ir.actions.act_window">
        <field name="name">Medical Specialties</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.specialty</field>
        <field name="view_mode">tree,form</field>
    </record>

