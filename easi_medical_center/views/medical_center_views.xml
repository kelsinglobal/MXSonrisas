<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

       <record id="view_medical_center_tree" model="ir.ui.view">
            <field name="name">patient.affiliation.tree</field>
            <field name="model">patient.affiliation</field>
            <field name="arch" type="xml">
                <tree string="Medical center" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
       </record>


      <record id="action_medical_center" model="ir.actions.act_window">
            <field name="name">Medical center</field>
            <field name="res_model">patient.affiliation</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new medical center
              </p>
            </field>
      </record>

  </data>
</odoo>